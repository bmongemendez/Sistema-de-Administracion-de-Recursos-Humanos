@model IEnumerable<PagosList>
<div class="table-responsive">
    <table class="table table-hover js-basic-example dataTable table-custom spacing5 mb-0">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Inicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasNormal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasExtra)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SalarioNeto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TotalDeduccionesPatrono)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    <div class="avtar-pic w35 bg-red"
                            data-toggle="tooltip"
                            data-placement="top"
                            >
                        @{
                            string iniciales = (item.Nombre.Substring(0,1)
                                + item.Apellido1.Substring(0,1)).ToUpper();
                        }
                        <span>@iniciales</span>
                    </div>
                </td>
                <td>
                    <span>
                    <a class="text-secondary" asp-action="Details" asp-route-id="@item.Id" >
                        <span>@Html.DisplayFor(modelItem => item.Cedula)</span>
                    </a>  
                    </span>      
                </td>
                <td>
                    <div class="font-15">
                        <a class="text-secondary" asp-action="Details" asp-route-id="@item.Id" >
                            @Html.DisplayFor(modelItem => item.Nombre) 
                            @Html.DisplayFor(modelItem => item.Apellido1) 
                            @Html.DisplayFor(modelItem => item.Apellido2) 
                        </a>
                    </div>
                </td>
                <td>
                    <span>@Html.DisplayFor(modelItem => item.Inicio)</span>
                </td>
                <td>
                    <div class="font-15">
                        @Html.DisplayFor(modelItem => item.Fin)
                    </div>
                </td>
                <td>
                    <span>@Html.DisplayFor(modelItem => item.HorasNormal)</span>
                </td>
                <td>
                    <span>@Html.DisplayFor(modelItem => item.HorasExtra)</span>
                </td>
                <td>
                    <span>¢@Html.DisplayFor(modelItem => item.SalarioNeto)</span>
                </td>
                <td>
                    <span>¢@Html.DisplayFor(modelItem => item.TotalDeduccionesPatrono)</span>
                </td>
                
                <td class="">
                <!--
                    <button type="button"
                            class="btn btn-sm btn-default"
                            title="Edit"
                            disabled>
                        <i class="fa fa-edit"></i>
                    </button>
                    <button type="button"
                            class="btn btn-sm btn-default js-sweetalert"
                            title="Delete"
                            data-type="confirm"
                            disabled>
                        <i class="fa fa-trash-o text-danger"></i>
                    </button>
                -->    
                    <a type="button" asp-action="BoletaPago"
                        asp-route-id="@item.Id"
                        class="btn btn-sm btn-dark"
                        title="Imprimir">
                        <i class="fa fa-print"></i>
                    </a>
                </td>
                
            </tr>
        }
        </tbody>
    </table>
</div>