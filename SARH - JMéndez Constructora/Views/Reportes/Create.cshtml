@model SARH___JMéndez_Constructora.Models.Vacaciones

@{
    ViewData["Title"] = "Create";
}

<div class="row p-5">
    <div class="col-12  p-3 bg-light rounded-sm">
        <h4>Nuevo Reporte de Vacaciones</h4>
        <hr />
        <div class="row">
            @*<div class="col-md-6">
                <partial name="_TiempoPartial">
            </div>*@
            <div class="col-md-6">
                <form name="formVacations" onsubmit="sendForms" id="formVacaciones" asp-controller="Reportes" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="IdEmpleado" class="control-label"></label>
                        <select id="selectIdEmpleadoVacaciones" asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado">
                            <option value="" selected>Seleccione el empleado</option>
                        </select>
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Notas" class="control-label"></label>
                        <input asp-for="Notas" class="form-control" />
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="FueronAprobadas" /> @Html.DisplayNameFor(model => model.FueronAprobadas)
                        </label>
                    </div>
                    <div class="form-group">
                        <input id="submitVacations" type="submit" value="Crear" class="btn btn-primary" />
                    </div>
                </form>
             
            </div>

        </div>
        <div>
            <a asp-action="Index">Volver a la lista</a>
        </div>

    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(document).ready(function () {
        $("#esVacacionesField").val("true");
        //$("#submitVacations").click((e) => {
        //    e.preventDefault()
        //    matchValues();
        //    submitForms();
        //});
    });

    const submitForms = () => {
        $("#formVacaciones").submit();
        $("#buttonSubmitTiempo").click();
    }
  

    const matchValues = () => {
        const indexSelected = $("#selectIdEmpleadoVacaciones :selected").val();
        $("#selectIdEmpleadoTiempo :selected").val(indexSelected);
    }

    $('#formVacaciones').submit(doubleSubmit);



</script>


}

