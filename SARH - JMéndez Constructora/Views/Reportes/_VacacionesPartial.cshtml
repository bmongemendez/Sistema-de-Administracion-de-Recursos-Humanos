}
<p>
    <a asp-action="Create" class="btn btn-primary d-block">Crear Nuevo Reporte de Vacaciones</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FueronAprobadas)
