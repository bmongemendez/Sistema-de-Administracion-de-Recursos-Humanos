@{
    ViewData["Title"] = "Usuarios";
    ViewData["sidebarActive"] = "Usuarios";
}

@using SARH___JMéndez_Constructora.Models.AccountViewModels
@model RegisterViewModel

<div class="container-fluid">
    <div class="block-header">
        <div class="row clearfix">
            <div class="col-md-6 col-sm-12">
                <h1>Inicio</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="../home/dashboard.html">
                                <i class="icon-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            Gestión de Usuarios del Sistema
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="body">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link "
                               data-toggle="tab"
                               href="#Users">Usuarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active show" data-toggle="tab" href="#addUser">Añadir Usuario</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-0">
                        <div class="tab-pane " id="Users">
                            <partial name="../Shared/_UsersPartial" />
                        </div>
                        <div class="tab-pane show active" id="addUser">
                            <div class="body mt-2">
                                <div class="row clearfix">
                                    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal col-12" role="form">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <input asp-for="UserName"
                                                       type="text"
                                                       class="form-control"
                                                       placeholder="Nombre de usuario *" />
                                                <span asp-validation-for="UserName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <input asp-for="Password"
                                                       type="text"
                                                       class="form-control"
                                                       placeholder="Contraseña" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <input asp-for="ConfirmPassword"
                                                       type="text"
                                                       class="form-control"
                                                       placeholder="Confirme la contraseña" />
                                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label asp-for="Role"></label>
                                                    <select asp-for="Role" class="form-control show-tick">
                                                        <option>Admin</option>
                                                        <option>RRHH</option>
                                                        <option>Gerencia</option>
                                                    </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <button type="submit" class="btn btn-default">Registrar</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
