@model SARH___JMéndez_Constructora.Models.SetPasswordViewModel

@{
    ViewData["Title"] = "SetPassword";
}


@{
    ViewData["Title"] = "Usuarios";
    ViewData["sidebarActive"] = "Usuarios";
}
<div class="container-fluid">
    <div class="block-header">
        <div class="row clearfix">
            <div class="col-md-6 col-sm-12">
                <h1>Inicio</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="../home/dashboard.html">
                                <i class="icon-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">
                            Cambiar contraseña
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="body">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                   
                    <div class="tab-content mt-0">
                        <div class="tab-pane show active" id="Users">
                            <form asp-action="SetPassword">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input asp-for="Id" type="hidden" />
                                @*<div class="col-12">
                                    <div class="form-group">
                                        <input  asp-for="Id" class="form-control" readonly="@(true)" />
                                        <span asp-validation-for="Id" class="text-danger"></span>
                                    </div>
                                </div>*@
                                <div class="col-12">
                                    <div class="form-group">
                                        <input asp-for="UserName" class="form-control" readonly="@(true)" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <input asp-for="NewPassword"
                                               type="text"
                                               class="form-control"
                                               placeholder="Nueva contraseña" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <input asp-for="ConfirmPassword"
                                               type="text"
                                               class="form-control"
                                               placeholder="Confirmar contraseña" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit" class="btn btn-default">Cambiar Contraseña</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
