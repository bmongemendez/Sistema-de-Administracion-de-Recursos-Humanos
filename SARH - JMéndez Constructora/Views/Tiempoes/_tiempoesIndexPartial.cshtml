@model IEnumerable<SARH___JMéndez_Constructora.Models.Tiempo>

@{
    ViewData["Title"] = "Index";
}
@*<p>
    <a asp-action="Create" class="btn btn-primary d-block">Crear Nuevo Reporte de Tiempo</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsLaborado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsInjustificado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsVacaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EsIncapacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdContratoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsLaborado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsInjustificado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsVacaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EsIncapacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdContratoNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Apellido1)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>
