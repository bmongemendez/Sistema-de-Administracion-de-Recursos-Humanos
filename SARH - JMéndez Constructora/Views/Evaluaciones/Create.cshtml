@model SARH___JMéndez_Constructora.Models.Evaluaciones

@{
    ViewData["Title"] = "Create";
    ViewData["sidebarActive"] = "Reportes";
}
<div class="container-fluid">
    <div class="block-header">

        <div class="row clearfix">
            <div class="col-md-6 col-sm-12">
                <h1>Inicio</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="../home/dashboard.html">
                                <i class="icon-home"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item">Nuevo reporte de evaluaciones</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <div class="body">
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <ul class="nav nav-tabs3 table-nav">
                        <li class="nav-item">
                            <a class="nav-link  "
                               asp-action="Index" asp-controller="Vacaciones">Vacaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Tiempoes">Tiempo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="Index" asp-controller="Evaluaciones">Evaluaciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-action="Index" asp-controller="Ausenciasinjustificadas">Ausencias Injustificadas</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-3">
                        <div class="tab-pane show active" >
                            <div class="row p-5">
                                <div class="col-12  p-3 bg-light rounded-sm">
                                    <h4>Nuevo Reporte de Evaluaciones</h4>
                                    <hr />
                                    <div class="row">
                                        <div class="col-12">
                                            <form asp-action="Create">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <div class="form-group">
                                                    <label asp-for="IdEmpleado" class="control-label"></label>
                                                    <select asp-for="IdEmpleado" class="form-control" asp-items="ViewBag.IdEmpleado"></select>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Calificacion" class="control-label"></label>
                                                    <input max="10" asp-for="Calificacion" class="form-control" />
                                                    <span asp-validation-for="Calificacion" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Observaciones" class="control-label"></label>
                                                    <input asp-for="Observaciones" class="form-control" />
                                                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <input type="submit" value="Create" class="btn btn-primary" />
                                                </div>
                                            </form>

                                        </div>

                                    </div>
                                    <div>
                                        <a class="btn btn-outline-primary" asp-action="Index">Volver a la lista</a>
                                    </div>

                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


