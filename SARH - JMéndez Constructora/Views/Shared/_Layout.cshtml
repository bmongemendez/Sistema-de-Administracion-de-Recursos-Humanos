<body class="theme-blue-primary font-raleway light_version">
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
            <div class="bar4"></div>
            <div class="bar5"></div>
        </div>
    </div>
    <!-- Ajustes del tema -->
    <div class="themesetting">
        <a href="javascript:void(0);" class="theme_btn">
            <i class="icon-magic-wand"></i>
        </a>
        <div class="card font_setting">
            <div class="header">
                <h2>Ajustes de Fuente</h2>
            </div>
            <div>
                <div class="fancy-radio mb-2">
                    <label>
                        <input name="font"
                               value="font-raleway"
                               type="radio"
                               checked /><span><i></i>Raleway</span>
                    </label>
                </div>
                <div class="fancy-radio mb-2">
                    <label>
                        <input name="font" value="font-montserrat" type="radio" /><span><i></i>Montserrat Google font</span>
                    </label>
                </div>
                <div class="fancy-radio">
                    <label>
                        <input name="font" value="font-bitter" type="radio" /><span><i></i>Bitter</span>
                    </label>
                </div>
            </div>
        </div>
        <div class="card setting_switch">
            <div class="header">
                <h2>Ajustes</h2>
            </div>
            <ul class="list-group">
                <li class="list-group-item">
                    Modo Oscuro
                    <div class="float-right">
                        <label class="switch">
                            <input type="checkbox" class="lv-btn" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </li>
                <li class="list-group-item">
                    Menú a la izquierda
                    <div class="float-right">
                        <label class="switch">
                            <input type="checkbox" class="rtl-btn" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </li>
                <li class="list-group-item">
                    Menú Horizontal
                    <div class="float-right">
                        <label class="switch">
                            <input type="checkbox" class="hmenu-btn" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </li>
                <li class="list-group-item">
                    Menú Reducido
                    <div class="float-right">
                        <label class="switch">
                            <input type="checkbox" class="mini-sidebar-btn" />
                            <span class="slider round"></span>
                        </label>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!-- Content Wrapper -->
    <div class="overlay"></div>
    <div id="wrapper">
        <!-- Navbar -->
        <nav class="navbar top-navbar">
            <div class="container-fluid">
                <div class="navbar-left">
                    <div class="navbar-btn navbar__button">
                        <a href="index.html"></a>
                        <button type="button" class="btn-toggle-offcanvas">
                            <i class="lnr lnr-menu fa fa-bars"></i>
                        </button>
                    </div>
                    <ul class="nav navbar-nav d-flex align-items-center"></ul>
                </div>
                <div class="navbar-right">
                    <div id="navbar-menu">
                        <ul class="nav navbar-nav d-flex flex-row">
                            <li class="ml-auto">
                                <img src="~/img/logoMinimalPNG.png"
                                     alt="Logo JMéndez Constructora"
                                     class="d-inline-block navbar-right__image" />
                            </li>
                            <li>
                                <a href="https://oculux.nsdbytes.com/laravel/public/authentication/login"
                                   class="icon-menu">
                                    <i class="icon-power"></i>
                                    <span>Salir</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="progress-container">
                <div class="progress-bar" id="myBar"></div>
            </div>
        </nav>

        <!-- Sidebar -->
        <div id="left-sidebar" class="sidebar">
            <div class="navbar-brand">
                <button type="button"
                        class="btn-toggle-offcanvas btn btn-sm float-right">
                    <i class="lnr lnr-menu fa fa-chevron-circle-left"></i>
                </button>
                <a href="../home/dashboard.html"><span class="navbar-brand__text">SARH</span></a>
            </div>
            <div class="sidebar-scroll">
                <div class="user-account">
                    <div class="user_div">
                        <img src="~/images/user.png"
                             class="user-photo"
                             alt="Foto perfil Usuario" />
                    </div>
                    <div class="dropdown">
                        <span>Bienvenido,</span>
                        <a href="javascript:void(0);"
                           class="dropdown-toggle user-name"
                           data-toggle="dropdown"><strong>Greivin Méndez</strong></a>
                        <ul class="dropdown-menu dropdown-menu-right account vivify flipInY">
                            <li>
                                <a href="../sistema/perfilUsuario.html"><i class="icon-user"></i>Mi Perfil</a>
                            </li>
                            <li>
                                <a href="../sistema/ajustesUsuario.html"><i class="icon-settings"></i>Ajustes</a>
