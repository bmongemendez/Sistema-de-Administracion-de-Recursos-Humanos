                </div>
                <nav id="left-sidebar-nav" class="sidebar-nav left-sidebar">
                    <ul id="main-menu" class="metismenu">
                        <li class="pt-3 sidebar__item active">
                            <a href="../home/dashboard.html" class="sidebar__link">
                                <i class="icon-screen-desktop sidebar__icon"></i><span class="left-sidebar__span">Tablero</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../trabajadores/trabajadoresActivos.html"
                               class="sidebar__link">
                                <i class="icon-users sidebar__icon"></i><span class="left-sidebar__span">Trabajadores</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../pagos/generarReporte.html" class="sidebar__link">
                                <i class="icon-credit-card sidebar__icon"></i><span class="left-sidebar__span">Pagos</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../controlTiempo/controlTiempo.html"
                               class="sidebar__link">
                                <i class="icon-clock sidebar__icon"></i><span class="left-sidebar__span">Control de Tiempo</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../registroRendimiento/realizarReporte.html"
                               class="sidebar__link">
                                <i class="icon-docs sidebar__icon"></i><span class="left-sidebar__span">Registro Rendimiento</span>
                            </a>
                        </li>
                        <li class="sidebar__item">
                            <a href="../sistema/gestionUsuarios.html" class="sidebar__link">
                                <i class="icon-users sidebar__icon"></i><span class="left-sidebar__span">Gestión de Usuarios</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../reportes/aguinaldos.html" class="sidebar__link">
                                <i class="icon-folder sidebar__icon"></i><span class="left-sidebar__span">Reportes</span>
                            </a>
                        </li>
                        <li class="pt-3 sidebar__item">
                            <a href="../controlTiempo/calendario.html" class="sidebar__link">
                                <i class="icon-calendar sidebar__icon"></i><span class="left-sidebar__span">Calendario</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div id="main-content">
            @RenderBody()
        </div>
    </div>
